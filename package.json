{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspaces foreach -vi run build",
        "typecheck": "yarn workspaces foreach -vi run typecheck",
        "lint": "yarn workspaces foreach -vi run lint",
        "lint:errors": "yarn workspaces foreach -vi run lint -- --quiet",
        "lint:fix": "yarn workspaces foreach -vi run lint:fix"
    },
    "packageManager": "yarn@3.2.0"
}
