{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es2021", "dom"],
        "module": "es2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist/",
        "baseUrl": "src/",
        "paths": {
            "@/*": ["*"],
            "package.json": ["../package.json"]
        }
    }
}
