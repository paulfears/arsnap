{
    "name": "@pianity/arsnap",
    "version": "0.0.0",
    "description": "Access Arweave through Metamask",
    "author": "Eyal Chojnowski <eyal@pianity.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/pianity/arsnap.git"
    },
    "files": [
        "dist/",
        "images/",
        "snap.manifest.json"
    ],
    "main": "src/index.js",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "engines": {
        "node": ">=12.11.0"
    },
    "scripts": {
        "dev": "nodemon --watch src/ --ext ts --exec 'yarn build && yarn serve'",
        "build": "yarn clean && yarn build:tsc && yarn build:snap",
        "build:snap": "mm-snap build --stripComments --src build/index.js --outfileName bundle.js --dist dist",
        "build:tsc": "tsc && tsc-alias",
        "clean": "rm -rf dist/ build/",
        "serve": "mm-snap serve --port 4000",
        "typecheck": "tsc --noEmit",
        "lint": "prettier --loglevel warn --check src/ ; eslint src/",
        "lint:fix": "prettier --loglevel warn --write src/ ; eslint --fix src/"
    },
    "dependencies": {
        "@metamask/key-tree": "^3.0.1",
        "@pianity/arsnap-adapter": "workspace:*",
        "async-mutex": "^0.3.2",
        "base64-js": "^1.5.1",
        "patch-package": "^6.4.7",
        "postinstall-postinstall": "^2.1.0"
    },
    "devDependencies": {
        "@metamask/snaps-cli": "^0.10.2",
        "@pianity/eslint-config": "workspace:*",
        "@pianity/prettier-config": "workspace:*",
        "@types/base-64": "^1.0.0",
        "eslint": "^8.13.0",
        "mkdirp": "^1.0.4",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.2",
        "tsc-alias": "^1.6.3",
        "typescript": "^4.6.3"
    }
}
