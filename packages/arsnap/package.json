{
    "name": "@pianity/arsnap",
    "version": "0.7.0",
    "description": "The 'Hello, world!' of MetaMask Snaps.",
    "author": "Eyal Chojnowski <eyal@pianity.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/MetaMask/snap-template.git"
    },
    "files": [
        "dist/",
        "images/",
        "snap.manifest.json"
    ],
    "main": "src/index.js",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "engines": {
        "node": ">=12.11.0"
    },
    "scripts": {
        "build": "yarn clean && yarn build:tsc && yarn build:snap",
        "build:snap": "mm-snap build --stripComments --src build/index.js --outfileName bundle.js --dist dist",
        "build:tsc": "tsc && tsc-alias",
        "clean": "rm -rf dist/ build/",
        "serve": "mm-snap serve --port 4000",
        "typecheck": "tsc --noEmit",
        "lint": "prettier --loglevel warn --check src/ && eslint src/",
        "lint:fix": "prettier --loglevel warn --write src/ && eslint --fix src/"
    },
    "dependencies": {
        "@metamask/key-tree": "^3.0.1",
        "@pianity/arsnap-adapter": "*",
        "base64-js": "^1.5.1"
    },
    "devDependencies": {
        "@metamask/snaps-cli": "^0.10.2",
        "@types/base-64": "^1.0.0",
        "mkdirp": "^1.0.4",
        "ts-node": "^10.6.0",
        "tsc-alias": "^1.6.3",
        "typescript": "^4.5.2",
        "@pianity/eslint-config": "*",
        "@pianity/prettier-config": "*"
    }
}
